<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/newPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="createNewPlayer"
        android:text="Create New Player"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/playerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/newPlayerButton"
        app:layout_constraintStart_toStartOf="@+id/newPlayerButton"
        app:layout_constraintTop_toBottomOf="@+id/newPlayerButton">

        <!-- Buttons for existing players will be added here dynamically -->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>